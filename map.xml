<?xml version="1.0" encoding="utf-8"?>
<map proto="1.3.0">
    <name>Ring</name>
    <version>1.0.0</version>
    <objective>敵チームより多く色を塗る / Paint with a color more than an enemy team.</objective>

<authors>
    <author>UDDO3</author>
    <author contribution="XML Coding">monmon__</author>
</authors>

<!-- 編集中 -->
<teams>
  <team color="Green" max="10">Green Team</team>
  <team color="Yellow" max="10">Yellow Team</team>
</teams>

<splatt materials="STAINED_CLAY;STAINED_GLASS" hide-progress-time="1m">
        <!-- 制限時間 -->
        <time>5m</time>
</splatt>
<include src="splatt.xml"/>

<spawns>
    <!-- チームスポーン -->
    <spawn team="Green" yaw="90" ><cuboid min="1022.5,38,1000.5" max="1022.5,38,1000.5"/></spawn>
    <spawn team="Yellow" yaw="-90" ><cuboid min="978.5,38,1000.5" max="978.5,38,1000.5"/></spawn>
    <!-- 観戦者スポーン -->
    <default yaw="0"><cuboid min="1000.5,40,1000.5" max="1000.5,40,1000.5"/></default>
</spawns>
 <disabledamage>
  <damage>fall</damage>
 </disabledamage>
 <maxbuildheight>0</maxbuildheight>

<!-- ポータル -->
<portals>
	<!-- Green Portal 1 -->
	<portal x="@1038" y="@29" z="@1038">
		<cuboid min="1021,38,1006" max="1023,38,1004"/>
	</portal>
	<!-- Green Portal 2 -->
	<portal x="@1038" y="@29" z="@962">
		<cuboid min="1023,38,994" max="1021,38,996"/>
	</portal>
	<!-- Yellow Portal 1 -->
	<portal x="@962" y="@29" z="@1038">
		<cuboid min="979,38,1004" max="977,38,1006"/>
	</portal>
	<!-- Yellow Portal 2 -->
	<portal x="@962" y="@29" z="@962">
		<cuboid min="979,38,996" max="977,378,994"/>
	</portal>
</portals>

</map>